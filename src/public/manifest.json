{
  "manifest_version": 3,
  "name": "Blink Chrome Extension",
  "version": "0.0.1",
  "description": "Blink extension for use of controlling Govee lights.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://blink-functions.azurewebsites.net/api/*"
  ]
}